<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetStart="@dimen/contentInset_toolbar"
        app:contentInsetEnd="@dimen/contentInset_toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_toolbar"
            android:layout_marginEnd="@dimen/padding_toolbar"
            android:src="@drawable/ic_toolbar_menu"
            android:contentDescription="@string/toolbar_menuIcon"/>

            android:layout_height="wrap_content"
            android:layout_gravity="center"

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_toolbar"
            android:layout_marginEnd="@dimen/padding_toolbar"
            android:layout_gravity="end"
            android:src="@drawable/ic_toolbar_search"
            android:contentDescription="@string/toolbar_searchIcon"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"/>

</LinearLayout>
