<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:right="@dimen/margin_spinner_moreIcon"
        android:gravity="end"
        android:drawable="@drawable/ic_toolbar_more"/>

    <item>
        <shape>
            <stroke
                android:width="@dimen/width_spinner_backgroundShapeStroke"
                android:color="@color/colorPrimaryText"/>

            <padding
                android:top="@dimen/padding_spinner_backgroundShape"
                android:bottom="@dimen/padding_spinner_backgroundShape"
                android:left="@dimen/padding_spinner_backgroundShape"/>

            <corners
                android:radius="@dimen/radius_spinner_backgroundShape"/>
        </shape>
    </item>

</layer-list>