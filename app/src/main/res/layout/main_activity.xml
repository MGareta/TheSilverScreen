<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_container"
        tools:context=".MainActivity"/>

    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:contentInsetStart="@dimen/contentInset_toolbar"
            app:contentInsetEnd="@dimen/contentInset_toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_toolbar"
                android:layout_marginEnd="@dimen/padding_toolbar"
                android:src="@drawable/ic_toolbar_menu"
                android:contentDescription="@string/toolbar_menuIcon"/>

            <TextView
                android:id="@+id/textView_boomMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/boomMenuButton_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:bmb_backgroundEffect="false"
                app:bmb_buttonEnum="ham"
                app:bmb_piecePlaceEnum="piecePlace_ham_4"
                app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                app:bmb_hamWidth="@dimen/contentInset_toolbar"
                app:bmb_hamHeight="@dimen/contentInset_toolbar">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_toolbar_more"
                    android:contentDescription="@string/toolbar_moreIcon"/>

            </com.nightonke.boommenu.BoomMenuButton>

        </android.support.v7.widget.Toolbar>

        <com.miguelcatalan.materialsearchview.MaterialSearchView
            android:id="@+id/materialSearchView_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:searchBackground="@color/colorPrimary"
            app:searchCloseIcon="@drawable/ic_materialsearchview_error"
            app:searchBackIcon="@drawable/ic_materialsearchview_back"
            style="@style/MaterialSearchViewStyle"/>

    </FrameLayout>

</RelativeLayout>